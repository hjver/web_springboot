<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>파일 전송 FTP</title>
</head>
<body>
<form id="frm" method="post" action="./cdn_fileok.do" enctype="multpart/form-data">
<input type="hidden" name="url" value="kbsn.or.kr">
파일첨부 : <input type="file" name="mfile"><br>
<button type="button" id="btn">CDN 파일 업로드</button>
</form>
<script>
document.querySelector("#btn").addEventListener("click", function(){
	if(frm.mfile.value == ""){
		alert("파일을 첨부하셔야 합니다.");
	}
	else{
		var mb = 1024 * 1024 * 2; 
		var fileck = frm.mfile.files[0].size;
		//console.log(fileck);
		if(mb < fileck){
			alert("파일 첨부는 최대 2MB 이하 입니다.");
			frm.mfile.value = "";
		}
		else{
			//console.log(frm.mfile.files[0]);
			var type = frm.mfile.files[0].type;
			if(type!="image/png" && type!="image/jpeg" && type!="image/bmp" && type!="image/webp"){
				alert("해당 첨부파일은 이미지 파일만 사용가능 합니다.");
			}
			else{
				frm.submit();
			}
		}
	}
});
</script>
</body>
</html>